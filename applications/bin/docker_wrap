#!/bin/bash

DOCKER=$1
shift

function clean_images {
	docker images | grep -E '<none>\s+<none>' | tee /dev/stderr  | awk '{print $3}' | xargs --no-run-if-empty docker rmi
}
function clear_stopped_container {
	docker ps -a | tail -n +2 | grep -v Up | tee /dev/stderr | awk '{print $1}' | xargs --no-run-if-empty docker rm
}

case $1 in
clean)
	shift
	clear_stopped_container
	clean_images
;;
*)
	${DOCKER} "$@"
esac
